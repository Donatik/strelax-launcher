{
  "name": "strelax-launcher",
  "version": "1.0.0",
  "main": "./src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "release": "electron-builder -p always",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "electron-updater": "^6.0.1"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.3"
  },
  "build": {
    "appId": "com.strelax.launcher",
    "productName": "Strelax RP",
    "copyright": "Copyright Â© 2024 Strelax Team",
    "publish": {
      "provider": "github",
      "owner": "Donatik",
      "repo": "strelax-launcher"
    },
    "win": {
      "target": "nsis",
      "icon": "public/assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
